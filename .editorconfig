root = true

[*]
# Change these settings to your own preference
indent_style = space
indent_size = 4

# We recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.neon]
indent_style = tab

[*.{yaml,yml}]
trim_trailing_whitespace = false

[composer.json]
indent_size = 4

[phpunit.xml{,.dist}]
indent_style = space
indent_size = 4
